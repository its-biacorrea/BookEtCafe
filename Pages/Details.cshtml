@page "/hamburguer/{id}"
@model BookEtCafe.Pages.DetailsModel

<h2 class="my-3">@Model.Livro.Nome</h2>
<div class="row">
    <div class="col-4">
        <img class="img-fluid rounded" src="@Model.Livro.ImagemUri">
    </div>
    <div class="col-6">
        <h4 class="my-3">Sobre:</h4>
        <p>@Model.Livro.Sinopse</p>
        <h4 class="my-3">Mais Info:</h4>
        <ul>
            <li>
            <label asp-for="Livro.Preco"></label>:
            @Html.DisplayFor(model => model.Livro.Preco)
            </li>
            <li>
            <label asp-for="Livro.Disponivel"></label>:
            @Html.DisplayFor(model => model.Livro.DisponivelFormatado)</li>
            <li>
            <label asp-for="Livro.DataDeEntrega"></label>: 
            @Html.DisplayFor(model => model.Livro.DataDeEntrega)</li>
        </ul>
        @if (User.Identity.IsAuthenticated)
        {
            <a class="btn my-3 btn-primary" asp-page="/Edit" asp-route-id="@Model.Livro.LivroId">Editar</a>
        }
    </div>
</div>